                        <h5 class="checkout-box-title">ADD/EDIT-ADDRESS</h5>
                        
                        <form action="/add-edit-address" id="form" method="post">

                        {{#if addressData}}
                        <div class="checkout-billing-adress-box vanakutty d-flex bor10">

                            <div>
                                <div class="billing-address-input clearfix">
                                    <label>FIRST NAME *</label>
                                    <input type="text" name="First_Name" id="First_Name" value="{{addressData.First_Name}}" required>
                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>LAST NAME *</label>
                                    <input type="text" name="Last_Name" id="Last_Name"  value="{{addressData.Last_Name}}" required>
                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>COMPANY / HOUSE NAME *</label>
                                    <input type="text" name="Company_Name" id="Company_Name"  value="{{addressData.Company_Name}}" required>
                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>ADDRESS *</label>
                                    <input type="text" placeholder="Street Address" name="Street_Address"
                                        id="Street_Address"  value="{{addressData.Street_Address}}" required> <br>
                                    <input type="text" placeholder="Fashin, suite, unite ect (optinal)"
                                        name="Extra_Details" id="Extra_Details"  value="{{addressData.Extra_Details}}" required>
                                </div>
                            </div>
                            <div class="p-l-25">
                                <div class="billing-address-input clearfix">
                                    <label>TOWN / CITY *</label>
                                    <input type="text" name="Town_City" id="Town_City"  value="{{addressData.Town_City}}" required>
                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>COUNTRY / STATES</label>
                                    <input type="text" name="Country_State" id="Country_State"  value="{{addressData.Country_State}}" required>
                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>POSTCODE / ZIP *</label>
                                    <input type="text" name="Post_Code" id="Post_Code"  value="{{addressData.Post_Code}}" required>
                                </div>

                                <div class="billing-address-input clearfix" style="margin-bottom:0px">
                                    <label>PHONE *</label>
                                    <input type="text" name="Phone" id="Phone"  value="{{addressData.Phone}}" required>
                                </div>
                                <div class="cbab-create-account">

                                </div>
                                <div class="billing-address-input clearfix">
                                    <label>ALTERNATE PHONE *</label>
                                    <input type="text" name="Alt_Phone" id="Alt_Phone"  value="{{addressData.Alt_Phone}}">
                                </div><br>
                                <div>
                                    <input type="text" name="addressId" value="{{addressData.addressId}}" hidden>
                                </div>
                                <div class="cbab-create-account">
                                    <button type="submit" class="btn btn-primary mb-2">Save address</button>
                                </div>
                            </div>
                        </div>
                        {{else}}
