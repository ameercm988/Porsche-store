<!-- Shoping Cart -->

<form class="bg0 p-t-75 p-b-85">
	<div class="container" id="quant-change">
		{{#if cartItems}}
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price</th>
								<th class="column-4">Quantity</th>
								<th class="column-5">Total</th>
							</tr>
							{{#each cartItems}}
							<tr class="table_row">
								{{!-- {{#each this.product}} --}}
								<td class="column-1">
									<div class="how-itemcart1">
										<img src="/productImages/{{this.product._id}}0.jpg" alt="IMG">
									</div>
								</td>
								<td class="column-2">{{this.product.name}}</td>

								<td class="column-3">$ {{this.product.price}}</td>
								{{!-- {{/each}} --}}
								<td class="column-4">
									{{!--
								<td>
									<button class="cart-item-count mr-3">-</button>{{this.quantity}}<button
										class="cart-item-count ml-3">+</button>

								</td> --}}

								<div class="wrap-num-product flex-w m-l-auto m-r-0">
									{{!-- {{#if {{this.quantity > 0}}}} --}}
									<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m" {{#when
										this.quantity 'eq' '1' }} style="pointer-events: none;" {{/when}}
										onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">
										<i class="fs-16 zmdi zmdi-minus"></i>
									</div>
									{{!-- {{/if}} --}}
									<input class="mtext-104 cl3 txt-center num-product" type="number"
										id="{{this.product._id}}" name="num-product1" value="{{this.quantity}}">

									<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m"
										onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">
										<i class="fs-16 zmdi zmdi-plus"></i>
									</div>
								</div>
								</td>

								<td class="column-5">$ {{this.productPrice}} </td>
								<td>
									<a href="" class="btn btn-danger mr-3"
										onclick="removeItem('{{this._id}}','{{this.product._id}}')">REMOVE
									</a>
								</td>

							</tr>
							{{/each}}
						</table>
					</div>

					<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">

						<div>
							{{#if couponCode}}
							<p style="font-weight: 500;">use coupon code <strong
									style="font-style: italic; color: rgb(18, 79, 220);">{{couponCode}}</strong> on
								checkout</p>
							{{/if}}
						</div>
					</div>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2" id="total">
								$ {{totalAmount}}
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">

						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Discount:
							</span>
						</div>

						<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
							<p class="stext-111 cl6 p-t-2">
								U haven't applied any offers till now, Proceed to checkout for further actions
							</p>
						</div>
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Delivery charges:
							</span>
						</div>
						<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
							<p class="stext-111 cl6 p-t-2 text-success" style="font-size: larger;">
								FREE
							</p>
						</div>
					</div>
				</div>

				<div class="flex-w flex-t p-t-27 p-b-33 ">
					<div class="size-208">
						<span class="mtext-101 cl2 ml-5 pl-5">
							Total:
						</span>
					</div>

					<div class="size-209 p-t-1">
						<span id="total" class="mtext-110 cl2 ml-5 pl-5">
							$ {{totalAmount}}
						</span>
					</div>
				</div>
				<a class="btn-primary" href="/checkout"><button type="button"
						class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer ">
						Proceed to Checkout
					</button></a>

			</div>
		</div>
	</div>
	{{else}}
	<center>
		<h1 style="color: red;">Sorry your cart is empty</h1>
		<img src="https://alphapharmaexhibitions.com/images/cartempty1.png" alt="" style="width:300px"><br>
		<a class="btn btn-succes" href="/shop" style="margin-top: 17px; color: green; border: solid green;">SHOP
			NOW</a>
	</center>
	{{/if}}
	</div>
</form>


<script>
	function changeQuantity(cartId, proId, userId, count) {
		let quantity = parseInt(document.getElementById(proId).innerHTML)

		$.ajax({
			url: "/change-product-quantity",
			data: {
				cart: cartId,
				product: proId,
				user: userId,
				count: count,
				quantity: quantity
			},
			method: 'post',
			success: (response) => {

				document.getElementById(proId).innerHTML = count + quantity
				//document.getElementById(total).innerHTML = response.totalAmount
				//$("#quant-change").load(location.href + "#quant-change")
				location.reload()

			}
		})
	}

	function removeItem(cartId, proId) {
		$.ajax({
			url: '/remove-cart-item',
			data: {
				cart: cartId,
				product: proId
			},
			method: 'post',
			success: (response) => {
				alert('product removed from cart')
				location.reload()

			}
		})
	}
</script>