<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Users List</h6>
                <div class="table-responsive">
                    <table class="table" id="userTable">
                        <thead>
                            <tr>
                                <th scope="col">NO:</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Mobile Number</th>
                                <th scope="col">Action</th>
                                <th scope="col">ORDERS</th>
                            </tr>
                        </thead>
                        {{#each users}}
                        <tbody>

                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{this.firstname}}</td>
                                <td>{{this.lastname}}</td>
                                <td>{{this.username}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobilenumber}}</td>

                                {{#if this.block}}
                                <td>
                                    <a href="/admin/block-user/{{this._id}}">
                                        <button class="text-white"
                                            style="background-color: rgb(22, 17, 17);border-color: rgb(53, 174, 239); border-radius:5px;border-width: 4px"
                                            onclick="return confirm('Do you want to unblock {{this.username}}?')">UNBLOCK
                                        </button>
                                    </a>
                                </td>
                                {{else}}
                                <td>
                                    <a href="/admin/block-user/{{this._id}}">
                                        <button class="text-white"
                                            style="background-color: rgb(22, 17, 17);border-color: rgb(196, 24, 24);border-radius:5px; width: 90px;border-width: 4px"
                                            onclick="return confirm('Do you want to block {{this.username}}?')">BLOCK
                                        </button>
                                    </a>
                                </td>
                                {{/if}}

                                 <td>
                                    <a href="/admin/view-orders/{{this._id}}">
                                        <button class="text-white"
                                            style="background-color: rgb(22, 17, 17);border-color: rgb(12, 217, 59);border-radius:5px; width: 90px; border-width: 4px;">ORDERS</button>
                                    </a>
                                </td>



                            </tr>

                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

