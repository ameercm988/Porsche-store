<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="container d-flex">
                <a style="margin-left: auto;" href="/admin/add-category"><button class="btn btn-success">ADD
                        CATEGORY</button></a>
            </div>
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Category List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">NO:</th>
                                <th scope="col">Category</th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        {{#each category}}
                        <tbody>

                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{this.category}}</td>
                                <td><img src="/productImages/{{this._id}}CI.jpg" alt=""  style="height: 30px; width: 50px;"></td>
                                <td>
                                    <a href="/admin/edit-category/{{this._id}}">
                                        <button class="text-white"
                                            style="background-color: rgb(42, 42, 246);border-color: aliceblue; border-radius:5px;">EDIT
                                        </button>
                                    </a>
                                </td>
                                <td>
                                    <a href="/admin/delete-category/?id={{this._id}}">
                                        <button class="text-white"
                                            style="background-color: rgb(223, 18, 18);border-color: aliceblue;border-radius:5px;"
                                            onclick="return confirm('Do you want to delete {{this.category}}?')">DELETE
                                        </button>
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>